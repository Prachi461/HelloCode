package StringEx;

public class StringOperationsExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        // Create Strings
        String str1 = "Hello";
        String str2 = "World";
        String str3 = "Hello";

        // Concatenation
        String concatenatedString = str1 + " " + str2;
        System.out.println("Concatenation: " + concatenatedString);

        // IndexOf
        int index = concatenatedString.indexOf('W');
        System.out.println("Index of 'W': " + index);

        // CharAt
        char charAt = concatenatedString.charAt(1);
        System.out.println("Character at index 1: " + charAt);

        // Compare
        int comparisonResult = str1.compareTo(str2); // Returns negative, zero, or positive
        System.out.println("Comparison between str1 and str2: " + comparisonResult);

        // Equal
        boolean isEqual = str1.equals(str3); // True if str1 is equal to str3
        System.out.println("Are str1 and str3 equal? " + isEqual);

	}

}
