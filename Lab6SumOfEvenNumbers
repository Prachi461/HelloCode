//3.Write a Java program that calculates the sum of all even numbers present in an ArrayList of integers.


package collectionDemo;

import java.util.ArrayList;

public class Lab6SumOfEvenNumbers {
    public static void main(String[] args) {
        // Create an ArrayList of integers
        ArrayList<Integer> numbers = new ArrayList<>();
        numbers.add(10);
        numbers.add(15);
        numbers.add(20);
        numbers.add(25);
        numbers.add(30);

        // Variable to store the sum of even numbers
        int sum = 0;

        // Loop through the ArrayList to find and add even numbers
        for (int num : numbers) {
            if (num % 2 == 0) { // Check if the number is even
                sum += num;
            }
        }

        // Display the result
        System.out.println("The sum of all even numbers in the list is: " + sum);
    }
}

